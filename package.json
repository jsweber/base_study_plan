{
  "name": "base_study_plan",
  "version": "0.0.1",
  "description": "帮助自己学习",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "node server.js",
    "test": "jest --watch",
    "test:all": "jest",
    "test:change": "jest -o"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsweber/base_study_plan.git"
  },
  "keywords": [
    "javascript"
  ],
  "author": "jsweber",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jsweber/base_study_plan/issues"
  },
  "homepage": "https://github.com/jsweber/base_study_plan#readme",
  "devDependencies": {
    "jest": "^29.3.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "testMatch": [ "**/test/**/*.test.js?(x)" ],
    "moduleDirectories": ["node_modules", "src"],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dev",
      "/src/server"
    ]
  }
}
